<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <ImageView
        android:id="@+id/emptyDatabaseIcon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_database_outline"
        android:tint="?android:attr/textColorSecondary"
        android:contentDescription="空数据库图标" />

    <TextView
        android:id="@+id/emptyDatabaseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="本地数据库为空"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/emptyDatabaseMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="请先在设置中更新本地数据库"
        android:textSize="14sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUpdateDatabase"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更新本地数据库"
        app:icon="@drawable/ic_refresh"
        app:iconGravity="textStart" />

</LinearLayout>